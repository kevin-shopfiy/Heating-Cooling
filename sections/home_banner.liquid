<style>
span.hm_hero_sub_title {color: {{ section.settings.sub_title_color }};}
h1.hm_hero_h1_title {color: {{ section.settings.title_color }};}
li.hm_hero_li {color: {{ section.settings.listed_color }};}
li.hm_hero_li svg {color: {{ section.settings.listed_icon_color }};}
.hm_hero_url a {background-color: {{ section.settings.button_bg_color }};color: {{ section.settings.button_text_color }};}
.hm_hero_url a:hover {background-color: {{ section.settings.button_bg_hover_color }};}
.hm_hero_url a svg {color: {{ section.settings.button_icon_color }};}
</style>

<section id="hm_hero_banner" style="background: url({{ section.settings.hero_bg | image_url }});background-repeat: no-repeat !important;background-size: cover !important;">
  <div class="container">
    <div class="hm_hero_inn_txt">
      <span class="hm_hero_sub_title">{{ section.settings.sub_title }}</span>
      <h1 class="hm_hero_h1_title">{{ section.settings.h1_title }}</h1>
      <ul class="hm_hero_ul">
        {% for block in section.blocks %}
        <li class="hm_hero_li"><span class="fas fa-check"></span>{{ block.settings.ul_li }}</li>
        {% endfor %}
      </ul>
    </div>
    <div class="hm_hero_url">
      <a href="{{ section.settings.hero_url }}">{{ section.settings.hero_url_txt }} <span class="fa fa-angle-double-right"></span></a>
    </div>
  </div>
</section>

