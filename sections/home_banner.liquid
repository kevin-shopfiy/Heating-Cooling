		"default": "#fff"
		},
		{
		"type": "color",
		"id": "listed_icon_color",
		"label": "Listed Icon Color",
		"default": "#e1d8bd"
		},
		{
		"type": "color",
		"id": "button_bg_color",
		"label": "Button Background Color",
		"default": "#00583b"
		},
		{
		"type": "color",
		"id": "button_bg_hover_color",
