<div class="sticky_form_wrap">
    <div class="sticky_icon" style="background-color: {{ section.settings.st_icon_bg }}">
        <img src="{{ section.settings.st_icon | image_url }}" />
    </div>
    <div class="stickr_form">
        <span class="close_form"><i class="fas fa-times-circle"></i></span>
        {% include 'sk_sidebar_form' %}
    </div>
</div>


{% schema %}
  {
    "name": "Sticky Form",
    "settings": [
        {
            "type": "image_picker",
            "id": "st_icon",
            "label": "Sticky Icon"
        },
        {
            "type": "color",
            "id": "st_icon_bg",
            "label": "Background Color",
            "default": "#086579"
        },
  {
    "type": "text",
    "id": "sub_title",
    "label": "Sub Title",
    "default": "Contact Us"
  },
  {
    "type": "text",
    "id": "section_title",
    "label": "Section Title",
    "default": "How Can We Help you?"
  },
  {
    "type": "text",
    "id": "name_placeholder",
    "label": "Name Placeholder",
    "default": "* Full Name"
  },
  {
    "type": "text",
    "id": "email_placeholder",
    "label": "Email Placeholder",
    "default": "* Email Address"
  },
  {
    "type": "text",
    "id": "postal_code",
    "label": "Postal Code",
    "default": "* Postal Code"
  },
  {
    "type": "text",
    "id": "message_placeholder",
    "label": "Message Placeholder",
    "default": "How can we help?"
  },
  {
    "type": "text",
    "id": "form_button_name",
    "label": "Button Text",
    "default": "Submit"
  },
      {
        "type": "header",
        "content": "Submitted Text"
      },
        {
          "type": "text",
          "id": "submitted_h1",
          "label": "Response Heading",
          "default": "Thank you for your message!"
        },
        {
          "type": "text",
          "id": "submitted_p",
          "label": "Response Sub Title",
          "default": "One of our customer service representatives will get back to you soon."
        },
        {
          "type": "image_picker",
          "id": "submitted_img",
          "label": "Response Image"
        },
        {
          "type": "text",
          "id": "submitted_close",
          "label": "Response Close",
          "default": "Close"
        }
    ],
    "presets":[
    	{
    		"name": "Sticky Form",
    		"category": "Custom Content"
    	}
    ]
  }
{% endschema %}



