<section id="cmm_testimonial">
<div class="container"> 
	<div class="row justify-content-center"> 
		<div class="cmm_testi_quote col-12 col-md-2 text-center align-self-center"> 
			<span class="fas fa-quote-left"></span> 
		</div> 
		<div class="cmm_testi_blockquote col-12 col-md-6 col-lg-7 quote align-self-center"> 
			<div class="test_blockquote">
              {{ section.settings.cmm_test_blockquote }}
			  <span class="test_author">{{ section.settings.cmm_test_author }}</span>
			</div> 
		</div> 
		<div class="cmm_testi_a col-12 col-md-4 col-lg-3 text-center align-self-center"> 
			<a href="{{ section.settings.cmm_test_url }}" >{{ section.settings.cmm_test_a }} <span class="fa fa-angle-double-right"></span></a> 
		</div> 
	</div> 
</div>
</section>
  
{% schema %}
  {
    "name": "Common Testimonial",
    "settings": [
		{
		"type": "html",
		"id": "cmm_test_blockquote",
		"label": "Blockquote"
		},
		{
		"type": "text",
		"id": "cmm_test_author",
		"label": "Author"
		},
		{
		"type": "url",
		"id": "cmm_test_url",
		"label": "URL"
		},
		{
		"type": "text",
		"id": "cmm_test_a",
		"label": "URL Name"
		}
	]
  }
{% endschema %}

