<style>
  .page_header_warp { background-color: {{ section.settings.sec_header_bg_color }};}
</style>
<style>
  .top_promotion_box {background-color: {{ settings.color_primary }}; border-bottom: 7px solid {{ settings.color_second }}; }
</style>

<div class="custom-page-box page_content_wrpper">

  <div class="page_content_wrap">
    <div class="container">
      <div class="row border_box">
        <div class="col-lg-8 col-md-12">
            <div class="page_text_content">
                {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'select' %}
                    <div class="h2_content">
                        <h2>{{ block.settings.abt_h2 }}</h2>
                        <p>{{ block.settings.abt_p }}</p>
                    </div>
                    {% when 'select-text' %}
                    <div class="textes">{{ block.settings['select-text-p'] }}</div>
                    {% when 'testimonial' %}
                    <div class="list_ul_box">
                        {{ block.settings.list_ul }}
                    </div>
                    {%  when 'announcement' %}
                    <div class="border-box">
                        <div class="h2_content">
                        
                        <div class="home_testi_box">
                            <h2>{{ block.settings.abt_h2 }}</h2>
                            <p>{{ block.settings.box_text }}</p>
                            <div class="name_btn">
                                <p class="author_name">{{ block.settings.m_author_text }}</p>                            
                            </div>
                            <div class="rating">
                            {% if block.settings.rating == 5 %}
                                {% include 'icon-star' %}
                                {% include 'icon-star' %}
                                {% include 'icon-star' %}
                                {% include 'icon-star' %}
                                {% include 'icon-star' %}
                            {% elsif block.settings.rating == 4 %}
                                <span class="fas fa-star"></span>
                                <span class="fas fa-star"></span>
                                <span class="fas fa-star"></span>
                                <span class="fas fa-star"></span>
                                <span class="far fa-star"></span>
                            {% elsif block.settings.rating == 3 %}
                                <span class="fas fa-star"></span>
                                <span class="fas fa-star"></span>
                                <span class="fas fa-star"></span>
                                <span class="far fa-star"></span>
                                <span class="far fa-star"></span>
                                {% elsif block.settings.rating == 2 %}
                                <span class="fas fa-star"></span>
                                <span class="fas fa-star"></span>
                                <span class="far fa-star"></span>
                                <span class="far fa-star"></span>
                                <span class="far fa-star"></span>
                                {% else %}
                                <span class="fas fa-star"></span>
                                <span class="far fa-star"></span>
                                <span class="far fa-star"></span>
                                <span class="far fa-star"></span>
                                <span class="far fa-star"></span>
                            {% endif %}
                                
                            </div>
                        </div>  
                                    
                        </div>
                            
                    </div>   
                    {%  when 'button' %}
                        <div class="border-box_button">
                        <a class="theme_green_btn" href="{{ block.settings.testi_btn_url }}">{{ block.settings.testi_btn_text }}</a>
                        </div> 
                {% endcase %}
                {% endfor %}
            </div>
        </div> 
 
        <div class="col-lg-4 col-md-12">
          <div class="image">
            {% if section.settings.sec_banner_img != blank %}
            <img
                src="{{ section.settings.sec_banner_img | image_url }}"
                alt="{{ section.settings.sec_banner_img | image_tag }}"
            >
            {% endif %}
          </div>
        </div>
       

        
      </div>
    </div>
  </div>
</div>






{% schema %}
 {
   "name": "Featured-product-box",
   "settings": [
       {
	"type": "image_picker",
	"id": "sec_banner_img",
	"label": "Banner Image"
	},
     {
	"type": "color",
	"id": "sec_header_bg_color",
	"label": "Background Color",
       "default": "#474747"
	}
     
   ],
"blocks": [
	{
	"type": "select",
     	"name": "Content",
	"settings": [
		{
		"type": "text",
		"id": "abt_h2",
		"label": "Heading 2"
		},
		{
		"type": "html",
		"id": "abt_p",
		"label": "Content"
		}
	 ]
   },
   {
	"type": "select-text",
     	"name": "Text HTML",
	"settings": [
		{
		"type": "html",
		"id": "select-text-p",
		"label": "Text"
		}
	 ]
   },
  {
	"type": "testimonial",
     	"name": "Ul List",
	"settings": [
		{
		"type": "html",
		"id": "list_ul",
		"label": "Ul List"
		}
	 ]
   },
   {
	"type": "announcement",
  "name": "announcement",
	"settings": [	  
    {
		"type": "text",
		"id": "abt_h2",
		"label": "Heading 2"
		},  
    {
		"type": "image_picker",
		"id": "testi_icon",
		"label": "Desk_top Icon"
		}, 
    {
		"type": "image_picker",
		"id": "testi_icon_mobile",
		"label": "Mobile Icon"
		},
    {
      "type": "text",
      "id": "box_text",
      "label": "Box Text"
    },
    {
        "type": "text",
        "id": "m_author_text",
        "label": "Author Name"
    }, 
    {
        "type": "range",
        "id": "rating",
        "min": 1,
        "max": 5,
        "step": 1,
        "label": "Rating",
        "default": 5
    }
   
	 ]
   },
   {
    "type": "button",
  "name": "button",
	"settings": [
    {
        "type": "text",
        "id": "testi_btn_url",
        "label": "Button Url",
        "default": "\/pages\/about-us\/#reviews"
      },
      {
        "type": "text",
        "id": "testi_btn_text",
        "label": "Author button"
      }
  ]
   }
   
   ],
   "presets": [
      {
        "name": "Featured-product-box"
       
      }
    ]
 }
