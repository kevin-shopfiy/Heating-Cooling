			"label": "Heading"
			},
			{
			"type": "html",
			"id": "abt_p",
			"label": "Content"
			}
		 ]
	   },
	   {
		"type": "select-text",
      	"name": "Text",
		"settings": [
			{
			"type": "html",
			"id": "select-text-p",
			"label": "Text"
			}
		 ]
	   },
      {
		"type": "testimonial",
      	"name": "Ul List",
		"settings": [
			{
			"type": "html",
			"id": "list_ul",
			"label": "Ul List"
			}
		 ]
	   },
      {
        "type": "select-big-ul",
        "name": "Big Ul List",
        "settings": [
