<div class="our_product_wrapper purchase">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12">
                <div class="our_pro_content">
                    <h1>{{ section.settings.helo_title }}</h1>
                    <p>{{ section.settings.pro_desc }}</p>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="product_main_img">
                  {% if section.settings.pro_img %}
                    <img src="{{ section.settings.pro_img | image_url }}" alt="{{ section.settings.pro_bg_color | image_tag }}">
                  {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "Purchase Hero",
    "settings": [
      {
    	"type": "text",
    	"id": "helo_title",
    	"label": "Title",
        "default": "What’s included with your purchase?"
    	},
      {
    	"type": "textarea",
    	"id": "pro_desc",
    	"label": "Descrioption",
        "default": "We’ll help you find the right product for your needs."
      },
      {
    	"type": "image_picker",
    	"id": "pro_img",
    	"label": "Product Image"
      },
      {
    	"type": "color",
    	"id": "pro_bg_color",
    	"label": "Section Background Color",
        "default": "#474747"
      }
    ]
  }
{% endschema %}


<style>
  .our_product_wrapper { background-color: {{ section.settings.pro_bg_color }}; }
</style>