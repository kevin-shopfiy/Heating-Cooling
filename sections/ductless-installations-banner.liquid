	},
	{
	"type": "image_picker",
	"id": "service_hero_pattern",
	"label": "Pattern"
	},
	{
	"type": "text",
	"id": "service_h2",
	"label": "Offer"
	},
	{
	"type": "text",
	"id": "service_condition",
	"label": "Condition"
	},
	{
	"type": "url",
	"id": "service_bann_url",
	"label": "Link"
	},
	{
	"type": "text",
	"id": "service_bann_a",
	"label": "Button"
	}
	]
  }
{% endschema %}

